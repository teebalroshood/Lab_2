module bcd_add2_if (
    input  [3:0] A0, A1,
    input  [3:0] B0, B1,
    output reg [3:0] S0, S1,
    output reg       S2
);
    reg [4:0] T0, T1;   // 5 bits to hold up to 19
    reg [4:0] Z0, Z1;   // 0 or 10
    reg       c1, c2;

    always @* begin
        // Low digit
        T0 = A0 + B0;
        if (T0 > 5'd9) begin
            Z0 = 5'd10;
            c1 = 1'b1;
        end else begin
            Z0 = 5'd0;
            c1 = 1'b0;
        end
        S0 = T0 - Z0;   // 0..9

        // High digit
        T1 = A1 + B1 + c1;
        if (T1 > 5'd9) begin
            Z1 = 5'd10;
            c2 = 1'b1;
        end else begin
            Z1 = 5'd0;
            c2 = 1'b0;
        end
        S1 = T1 - Z1;   // 0..9
        S2 = c2;        // hundreds carry
    end
endmodule